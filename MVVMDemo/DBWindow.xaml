<Window x:Class="MVVMDemo.DBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMDemo"
        mc:Ignorable="d"
        Title="DBWindow" Height="450" Width="450">
    <Grid>
        <TextBox x:Name="ServerTextBox" HorizontalAlignment="Left" Height="23" Margin="161,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Height="23" Margin="161,115,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="DatabaseTextBox" HorizontalAlignment="Left" Height="23" Margin="161,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PortTextBox" HorizontalAlignment="Left" Height="23" Margin="161,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="161,164,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Server" HorizontalAlignment="Left" Margin="69,61,0,0" VerticalAlignment="Top"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="69,112,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="69,156,0,0" VerticalAlignment="Top"/>
        <Label Content="Port" HorizontalAlignment="Left" Margin="69,207,0,0" VerticalAlignment="Top"/>
        <Label Content="Database Name" HorizontalAlignment="Left" Margin="69,240,0,0" VerticalAlignment="Top"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="287,284,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
